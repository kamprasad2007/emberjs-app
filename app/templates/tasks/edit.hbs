<form>
  <div class="form-group">
    <label>Email address</label>
    {{input type="email" class="form-control" value=model.email placeholder="Email"}}
  </div>
  <div class="form-group">
    <label>Name</label>
    {{input type="text" class="form-control" value=model.name  placeholder="Name"}}
  </div>
  <div class="form-group">
       <label>Description</label>
        {{textarea class="form-control" rows="3" value=model.descrip placeholder="Description"}}
  </div>
  <button {{action 'editEmployee' model.id}} class="btn btn-default">Update</button>
</form>


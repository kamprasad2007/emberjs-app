    <label>Email address</label>
    {{input type="email" class="form-control" value=email placeholder="Email"}}
  </div>
  <div class="form-group">
    <label>Name</label>
    {{input type="text" class="form-control" value=name  placeholder="Name"}}
  </div>
  <div class="form-group">
       <label>Description</label>
        {{textarea class="form-control" rows="3" value=descrip placeholder="Description"}}
  </div>
  <button {{action 'addEmployee'}} class="btn btn-default">Save</button>
</form>
